<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShareTask">

    <!-- Поле для ввода названия группы -->
    <EditText
        android:id="@+id/editGroupName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Название группы"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp"
         />

    <!-- Поле для ввода описания группы -->
    <EditText
        android:id="@+id/editGroupDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Описание группы (необязательно)"
        app:layout_constraintTop_toBottomOf="@id/editGroupName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp"
         />

    <!-- Поле для ввода адресов электронной почты приглашенных пользователей -->
    <EditText
        android:id="@+id/editEmails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Адреса электронной почты приглашенных (через запятую)"
        app:layout_constraintTop_toBottomOf="@id/editGroupDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp"
         />

    <!-- Кнопка для создания группы -->
    <Button
        android:id="@+id/btnCreateGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Создать группу"
        app:layout_constraintTop_toBottomOf="@id/editEmails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
         />

    <!-- Список приглашений, полученных текущим пользователем -->
    <ListView
        android:id="@+id/listViewInvitations"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnCreateGroup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_invitation" />


</androidx.constraintlayout.widget.ConstraintLayout>
