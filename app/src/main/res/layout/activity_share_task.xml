<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Элементы для редактирования названия, описания и списка электронной почты группы -->
    <EditText
        android:id="@+id/editGroupName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Название группы"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/editGroupDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Описание группы"
        android:layout_below="@id/editGroupName"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/editEmails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Электронная почта участников (разделенные запятыми)"
        android:layout_below="@id/editGroupDescription"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Кнопка для создания группы -->
    <Button
        android:id="@+id/btnCreateGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Создать группу"
        android:layout_below="@id/editEmails"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <!-- ListView для отображения приглашений -->

    <!-- ListView для отображения групп -->

    <ListView
        android:id="@+id/listViewInvitations"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/btnCreateGroup"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="16dp" />

    <ListView
        android:id="@+id/listViewGroups"
        android:layout_width="348dp"
        android:layout_height="96dp"
        android:layout_below="@id/listViewInvitations"
        android:layout_marginTop="14dp" />

</RelativeLayout>
