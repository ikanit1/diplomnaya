<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите задачу"
        android:textColor="@android:color/black"
        android:minHeight="48dp"
        android:layout_weight="1"/>

    <!-- Добавляем новые элементы для выбора даты и времени -->

    <TextView
        android:id="@+id/textViewDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/textSelectDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text="Выбрать время для уведомления"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:visibility="visible" /> <!-- По умолчанию видимое -->


    <ImageButton
        android:id="@+id/buttonPickDateTime"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:src="@drawable/baseline_access_time_24"
        android:text="Выбрать дату и время"
        android:textColor="@android:color/black" />

    <Switch
        android:id="@+id/switch_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:checked="false"
        android:text="Уведомить" />

    <Switch
        android:id="@+id/switchPriority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Важная задача"
        android:textColor="@android:color/black"
        android:layout_weight="1"/>

</LinearLayout>
